    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Multiplexer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/multiplexer",
            "args": [
                "--target", "localhost:1501",
            ]
        },
        {
            "name": "Start Multiplexer (TARGET_HSM)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/multiplexer",
            "args": [
                "--target", "${environment:TARGET_HSM}",
            ]
        },
        {
            "name": "Start Mock",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/mock",
            "args": [
                "--host", "127.0.0.1",
                "--port", "1500",
            ]
        },
        {
            "name": "Send Echo (local)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/sendecho",
            "args": [
                "localhost:1500",
                "hello_world",
            ]
        },
        {
            "name": "Send Echo (EC2)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/sendecho",
            "args": [
                "54.232.202.209:1500",
                "This is an ECHO message!",
            ]
        },
    ]
}